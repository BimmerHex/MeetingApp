@model List<UserInfo>
@{
    ViewBag.Title = "Katılımcı Listesi";
}
<main class="text-center">
    <h1 class="h4">Katılımcı Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım Durumu</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @{
                int attendCount = 0;
            }
            @foreach (var user in Model) {
                var willAttend = user.WillAttend == true ? "Evet" : "Hayır";
                var className = user.WillAttend == true ? "table-success" : "table-danger";

                if (user.WillAttend == true) {
                    attendCount++;
                }
                
                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@willAttend</td>
                    <td>
                        <a href="/meeting/details/@user.Id" class="btn btn-sm btn-primary">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="card">
        <div class="card-body">
            <span>Katılımcı Sayısı: @attendCount</span>
        </div>
    </div>
</main>