@model UserInfo
@{
    ViewBag.Title = "Katılım Durumu";
}
<main class="text-center">
    <h1 class="h4">Katılım Durumu</h1>

    @if (Model.WillAttend == true) {
        <p>Teşekkürler, @Model.Name </p>
        <p>Toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor.</p>
        <a href="/meeting/list" class="btn btn-sm btn-outline-primary">Katılımcıları Listele</a>
    } else {
        <p>@Model.Name, toplantıya katılmadığınızdan dolayı üzgünüz.</p>
        <a href="/meeting/apply" class="btn btn-sm btn-outline-primary">Yeni Başvuru Yap</a>
    }    
</main>