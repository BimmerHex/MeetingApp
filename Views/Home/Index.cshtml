@model MeetingInfo
@{
    ViewBag.Title = "Toplantı Başvuru";
    Layout = "_Layout2";
}
<!-- <h1 class="h4">@ViewBag.WelcomeMessage, @ViewBag.Username</h1> -->
<h1 class="h4">@ViewData["WelcomeMessage"], @ViewData["Username"]</h1>
<h2>Toplantı katılım durumunuzu bildiriniz.</h2>

<div class="card my-2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">Tarih: @Model.Date.ToString("dd/MM/yyyy HH:mm:ss")</li>
        <li class="list-group-item">Katılımcı Sayısı: @Model.NumberOfPeople</li>
    </ul>
</div>

<a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Başvuru Yap</a>